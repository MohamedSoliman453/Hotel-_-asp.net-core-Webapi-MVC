@model Hotel.MVC.DTO.RoomBookingDTO

@{
    ViewData["Title"] = "Choose Room";
    var bookingId = ViewBag.BookingId as int?;
    var availableRooms = ViewBag.AvailableRooms as SelectList;
}

<h2>Choose Room</h2>

@if (availableRooms != null && availableRooms.Any())
{
    <form asp-action="BookRoom" asp-controller="Booking" method="post">
        <input type="hidden" name="BookingID" value="@bookingId" />

        <div class="form-group">
            <label for="RoomID">Room:</label>
            <select asp-for="RoomID" asp-items="availableRooms" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="CheckInDate">Check-In Date:</label>
            <input asp-for="CheckInDate" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="CheckOutDate">Check-Out Date:</label>
            <input asp-for="CheckOutDate" type="date" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Book Room</button>
    </form>
}
else
{
    <p>No available rooms at the moment.</p>
}
